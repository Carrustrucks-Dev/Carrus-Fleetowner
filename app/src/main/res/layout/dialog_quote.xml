<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/crossIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/ten"
        android:src="@mipmap/icon_cross" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/fifteen"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mid_fond"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/trackingavail" />

        <RadioGroup
            android:id="@+id/trackingRadio"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radioYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no" />

        </RadioGroup>

    </RelativeLayout>

    <EditText
        android:id="@+id/offrbidEdtxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fifteen"
        android:background="@drawable/square_edit_text"
        android:gravity="left|top"
        android:hint="@string/offrdbid"
        android:inputType="number"
        android:padding="@dimen/ten" />


    <EditText
        android:id="@+id/notesEdtxt"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mediumhieght"
        android:layout_margin="@dimen/fifteen"
        android:background="@drawable/square_edit_text"
        android:gravity="left|top"
        android:hint="@string/notes"
        android:padding="@dimen/ten" />


    <Button
        android:id="@+id/submitBtn"
        style="@style/CustomTextAppearance.Bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifteen"
        android:background="@drawable/background_bottomrounded"
        android:padding="@dimen/ten"
        android:text="@string/quote"
        android:textColor="@color/windowBackground"
        android:textSize="@dimen/mid_fond" />


</LinearLayout>