<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/crossIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/ten"
        android:src="@mipmap/icon_cross"/>

    <EditText
        android:id="@+id/feedbackEdtxt"
        android:layout_width="fill_parent"
        android:background="@drawable/square_edit_text"
        android:padding="@dimen/ten"
        android:hint="addfeedback"
        android:layout_margin="@dimen/fifteen"
        android:gravity="left|top"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/ratingSubmitBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/windowBackground"
        android:padding="@dimen/ten"
        android:textSize="@dimen/mid_fond"
        android:layout_marginTop="@dimen/fifteen"
        android:background="@drawable/background_bottomrounded"/>


</LinearLayout>