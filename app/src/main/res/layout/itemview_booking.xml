<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/ten"
    android:orientation="horizontal"
    android:background="@drawable/selector_row"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="1"
    android:baselineAligned="false">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.24">

    <RelativeLayout
        android:layout_width="@dimen/mediumhieght"
        android:layout_height="@dimen/mediumhieght"
        android:layout_centerInParent="true"
        android:background="@drawable/circle"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/dateTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="-12dp"
                android:textColor="@color/windowBackground"
                android:textSize="@dimen/toolarge_font"
                tools:ignore="NegativeMargin" />

            <TextView
                android:id="@+id/monthTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/windowBackground"
                android:textSize="@dimen/mid_fond"
                />

        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/five"
        android:paddingRight="@dimen/five"
        android:layout_weight="0.38">

        <com.carrus.fleetowner.utils.CapitalizedTextView
            android:id="@+id/addressTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/low_font"

            />

        <com.carrus.fleetowner.utils.CapitalizedTextView
            android:id="@+id/nameTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/tabcolor_dark"
            android:textSize="@dimen/low_font"
            />

        <com.carrus.fleetowner.utils.CapitalizedTextView
            android:id="@+id/codeTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/low_font"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:paddingLeft="@dimen/five"
        android:paddingRight="@dimen/five"
        android:layout_weight="0.38">

        <TextView
            android:id="@+id/timeTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/low_font"
            />

        <com.carrus.fleetowner.utils.CapitalizedTextView
            android:id="@+id/statusTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/low_font"
            />
    </LinearLayout>

</LinearLayout>